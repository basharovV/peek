<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cardView"
    app:cardElevation="2dp"
    android:layout_margin="4dp"
    app:contentPaddingRight="0dp"
    app:contentPaddingLeft="0dp"
    app:cardCornerRadius="5dp"
    android:clipChildren="true"
    app:cardBackgroundColor="@android:color/transparent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_header_layout"
            android:orientation="vertical"
            android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="plProfile"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:maxWidth="260dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Place name"
                android:singleLine="true"
                android:requiresFadingEdge="horizontal"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="10dp"
                style="@style/PlaceTitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/card_type"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/PlaceCardTopInfo"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:text="Type"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:background="@drawable/top_info_bg">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:layout_marginRight="3dp"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_clock_icon_top_info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_time"
                    style="@style/PlaceCardTopInfo"
                    android:gravity="start|center_vertical"
                    android:text="3 min"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_distance"
                android:background="@drawable/top_info_bg"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="end|center_vertical"
                android:text="5.2 km"
                style="@style/PlaceCardTopInfo"
                />
        </RelativeLayout>
        </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        >

        <!--<com.joooonho.SelectableRoundedImageView-->
        <ImageView
            android:id="@+id/placePhoto"
            android:src="@drawable/no_img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
            <!--app:sriv_left_top_corner_radius="0dip"-->
            <!--app:sriv_right_top_corner_radius="0dip"-->
            <!--app:sriv_left_bottom_corner_radius="5dip"-->
            <!--app:sriv_right_bottom_corner_radius="5dip"-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ranking_rect_bg"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ranking_icon"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeRanking"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                style="@style/RatingNumber"
                android:text="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:background="@drawable/toolbar_shadow"/>
    </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
