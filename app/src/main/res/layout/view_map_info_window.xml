<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="85dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mdtp_dark_gray"
    android:alpha="0.9">

    <LinearLayout
        android:orientation="vertical" android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/main_info_layout"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_layout"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:baselineAligned="false">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/map_info_name"
            style="@style/MapInfoTitle"
            android:text="Place name"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/colorMaterialLightGrey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/map_info_type"
            android:text="Type"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"

            />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>