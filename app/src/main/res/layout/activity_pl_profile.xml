<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.peekapp.example.peek"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginBottom="32dp"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">


        <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/plProfilePhoto"
            android:src="@drawable/place_photo"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/pl_profile_toolbar"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            style="@style/AppTheme.Toolbar"
            android:layout_gravity="top">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/peek_toolbar_logo_small"
                android:layout_gravity="center"
                android:id="@+id/toolbar_logo"
                android:cropToPadding="false"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false" />
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_overflow"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:id="@+id/createEventButton" />


        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/plProfileRecView"
        android:scrollbars="vertical"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"    />

</android.support.design.widget.CoordinatorLayout>