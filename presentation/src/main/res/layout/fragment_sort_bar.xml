<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:id="@+id/optionsBar"
    android:background="@color/peek_white_trans">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <com.peekapps.peek.presentation.peek.views.SortButtonView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/trendingSortButton"
                android:src="@drawable/ic_trending_icon"
                android:scaleType="centerInside"
                style="@style/SortingIcons"
            />

            <com.peekapps.peek.presentation.peek.views.SortButtonView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/clockSortButton"
                android:src="@drawable/ic_clock_icon"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                style="@style/SortingIcons"/>

            <com.peekapps.peek.presentation.peek.views.SortButtonView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/locationSortButton"
                android:src="@drawable/ic_pin_icon"
                android:scaleType="fitCenter"
                style="@style/SortingIcons"/>

            <com.peekapps.peek.presentation.peek.views.SortButtonView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/friendsSortButton"
                android:src="@drawable/ic_friends_icon"
                android:scaleType="fitCenter"
                style="@style/SortingIcons"/>

        </LinearLayout>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:src="@drawable/search_handle"
                android:background="@android:color/transparent"
                android:alpha="0.5"
                android:scaleType="centerInside"
                android:layout_gravity="right|center_vertical"/>

    </FrameLayout>
</LinearLayout>