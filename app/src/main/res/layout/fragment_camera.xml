<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <!-- IMAGE CAPTURE BUTTON -->
    <ImageButton
        android:src="@drawable/capture_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/camera_preview"
        android:adjustViewBounds="true"
        android:layout_gravity="bottom|center"
        android:layout_centerHorizontal="true"
        android:id="@+id/pictureButton"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:onClick=""
        android:layout_marginBottom="6dp"
        android:contentDescription="captureButton" />

    <!-- FLASH BUTTON -->
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="45dp"
        android:id="@+id/flash_button"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:src="@drawable/flash_button"
        android:background="@android:color/transparent"
        />

    <!-- SWITCH CAMERA BUTTON -->
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/switch_cam_button"
        android:layout_margin="13dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:src="@drawable/switch_cam"
        android:background="@android:color/transparent"
        />

</RelativeLayout>


