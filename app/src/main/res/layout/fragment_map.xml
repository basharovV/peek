<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    tools:context="com.peekapps.peek.fragments.MapFragment"
    android:id="@+id/mapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="80dp"
    sothree:umanoShadowHeight="4dp">

    <!-- MAP -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <com.google.android.gms.maps.MapView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:access_token="@string/mapbox_token"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/map_selector"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal"/>

    </FrameLayout>


    <!-- BOTTOM PANEL -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/peek_white_trans">

        <com.peekapps.peek.views.PhotoPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapPhotoPager"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/top_shadow"
            android:layout_gravity="bottom"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/mapLikeButton"
                android:paddingLeft="5dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_done"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/PeekCount"
                    android:fontFamily="sans-serif-thin"
                    android:text="124"/>
            </LinearLayout>



            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_overflow"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/mapPanelToolbar"
            android:background="@color/peek_dark"
            android:contentInsetStart="0dp"
            app:contentInsetStart="0dp"
            android:paddingTop="5dp"
            android:paddingLeft="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mapPanelPlaceName"
                        style="@style/MapPanelPlaceName"
                        android:text="Place Name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mapPanelPlaceVic"
                        android:layout_marginTop="5dp"
                        style="@style/MapPanelPlaceVic"
                        android:text="Place vicinity"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/p_logo"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="567"
                            style="@style/MapPanelHeaderCounts"/>
                    </LinearLayout>

                    <!--UPLOAD COUNT -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/mapPanelUploadCountIcon"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_photo_camera"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/mapPanelUploadCount"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            style="@style/MapPanelHeaderCounts"
                            android:text="43"/>

                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_view_headline"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_place"/>
                    </FrameLayout>
                </LinearLayout>




            </LinearLayout>
        </android.support.v7.widget.Toolbar>



    </FrameLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>