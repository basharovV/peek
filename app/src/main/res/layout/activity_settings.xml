<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peek_light_grey"
    android:fitsSystemWindows="true">


    <fragment
        android:name="com.peekapps.peek.fragments.SettingsFragment"
        android:id="@+id/settingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.facebook.login.widget.LoginButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingsFBButton"
        android:layout_gravity="bottom"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/loginHeaderLogo"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/loginLogo"
            android:src="@drawable/p_logo"
            android:layout_gravity="center_vertical"
            android:cropToPadding="false"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:focusable="false"

            android:elevation="2dp"/>
        <ImageView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:id="@+id/loginTextLogo"
            android:src="@drawable/peek_toolbar_logo"
            android:visibility="visible"/>
    </LinearLayout>


</LinearLayout>