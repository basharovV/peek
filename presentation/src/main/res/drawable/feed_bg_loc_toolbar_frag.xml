<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:top="1dp" android:bottom="0dp" android:left="0dp"
        android:right="0dp">
    <shape
        android:shape="rectangle">
        <corners android:radius="70dp"/>
        <size android:width="100dp"
            android:height="30dp"/>
        <gradient
            android:startColor="@android:color/transparent"
            android:centerColor="#450b0b0b"
            android:endColor="#580b0b0b"
            android:angle="270"/>

    </shape>
    </item>
    <item android:top="0dp" android:bottom="1dp" android:left="0dp"
        android:right="0dp" >
    <shape
        android:shape="rectangle">
        <corners android:radius="70dp"/>
        <size android:width="100dp"
            android:height="30dp"/>
        <solid
            android:color="@color/peek_orange_dark"/>

    </shape>
    </item>
</layer-list>
